                  <input class="form-check-input" type="radio" name="<%= name %>" id="<%= choicename %>" value="<%= choice.real %>">
                  <label class="form-check-label" for="<%= choicename %>" style="width: 100%;">
                    <%- choice %>
                  </label>
                </div>
              <%
                  });
                } 
                // essay
                else if(e.answerType == 'essay') {
              %>
